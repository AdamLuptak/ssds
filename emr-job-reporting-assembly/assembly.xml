            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>/src/main/sh</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <excludes>
                <exclude>**original**</exclude>
            </excludes>
            <includes>
                <include>**.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../emr-job-registration/target</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <includes>
